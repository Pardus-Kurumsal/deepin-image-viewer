Dtk--Widget--DScrollBar::add-line,Dtk--Widget--DScrollBar::sub-line,Dtk--Widget--DScrollBar::add-page,Dtk--Widget--DScrollBar::sub-page{
    background-color: transparent;
}

Dtk--Widget--DScrollBar{
    max-width: 10;
    margin-right: 1px;
    background-color: transparent;
}

Dtk--Widget--DScrollBar::handle{
    background-color: rgba(255,255,255,0.2);
    border-radius: 2px;
    margin: 4px 2px 4px 2px;
}

Dtk--Widget--DScrollBar::handle:vertical{
    min-height: 45px;
    width: 8px;
}

Dtk--Widget--DScrollBar::handle:horizontal{
    min-width: 20px;
    height: 8px;
}

Dtk--Widget--DScrollBar::handle:hover{
    background-color: rgba(255,255,255,0.4);
}

Dtk--Widget--DScrollBar::add-line {
    border: none;
    background: none;
}

Dtk--Widget--DScrollBar::sub-line {
    border: none;
    background: none;
}

/*For mainwidget's top-panel and bottom-panel margin*/
Dtk--Widget--DScrollBar {
    margin-top: 40px;
    margin-bottom: 24px;
}
